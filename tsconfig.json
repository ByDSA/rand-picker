{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSources": true,
    "lib": ["dom", "ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2016",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["**/*.spec.ts", "**/tests?", "dist", "node_modules"],
  "filesGlob": ["src/**/*.ts"],
  "include": ["src/**/*.ts"],
  "typeRoots": ["../node_modules/@types"],
  "types": ["node"]
}
